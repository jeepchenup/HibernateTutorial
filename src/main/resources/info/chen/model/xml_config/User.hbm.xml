<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="info.chen.model.xml_config">

    <class name="info.chen.model.xml_config.User" table="user">
        <id name="id" column="id" unsaved-value="111">
            <generator class="increment"/>
        </id>
        <property name="username" column="username"/>
        <property name="firstname" column="firstname"/>
        <!--省略 column 的时候，column 值默认为 name 中的值-->
        <property name="lastname"/>
        <property name="register_date" column="date" type="timestamp"/>
    </class>
</hibernate-mapping>